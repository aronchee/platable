<h1>Groceries#index</h1>
<p>Find me in app/views/groceries/index.html.erb</p>

<%= link_to "Add gocery list", new_user_grocery_path(current_user) %>

<h2>Groceries List </h2>

<h3>Groceries to buy </h3>
<div class="list" id="unchecked-list">
	<ul>
		<% @unchecked_groceries.each do |x| %>
			<%= form_tag "/users/#{current_user.id}/groceries/#{x.id}", method: :patch do %>
				<%= check_box_tag(:checked, "true") %>
				<%= submit_tag("Update") %>
				<%= label_tag(:checked, x.ingredient_id) %>  <%= link_to "X",user_grocery_path(:id => x.id), method: :delete %>
			<% end %>
		<% end %>
	</ul>
</div>	


<h3> Checked </h3>
<div class="list" id="checked-list">
	<ul>
		<% @checked_groceries.each do |y| %>
			<%= form_tag "/users/#{current_user.id}/groceries/#{y.id}", method: :patch do %>
				<%= check_box_tag(:checked, "false") %>
				<%= submit_tag("Update") %>
				<%= label_tag(:checked, y.ingredient_id) %>  <%= link_to "X",user_grocery_path(:id => y.id), method: :delete %>
			<% end %>
		<% end %>
	</ul>
</div>

