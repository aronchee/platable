<% if @grocery.checked %>
	<%= form_tag "/users/#{current_user.id}/groceries/#{@grocery.id}", method: :patch, remote: true, class: "edit_list" do %>
		<%= check_box_tag(:checked, "false", true) %>
		<%= label_tag(:checked, @grocery.ingredient.name ) %>
	<% end %>
<% else %>
	<%= form_tag "/users/#{current_user.id}/groceries/#{@grocery.id}", method: :patch, remote: true, class: "edit_list" do %>
		<%= check_box_tag(:unchecked, "true") %>
		<%= label_tag(:unchecked, @grocery.ingredient.name) %> 
	<% end %>
<% end %>