<!DOCTYPE html>
<html lang = "en">

<p id="notice"><%= notice %></p>

<script src="//maps.google.com/maps/api/js?key=AIzaSyCkqmrTKNzPuTxRq1BNLjZQlKcDhzzL8GQ"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<h1>Maps</h1>

<table width="50%">
  <thead>
    <tr>
      <th>Address</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
        <td><%= map.address %></td>
        <td><%= map.longitude %></td>
        <td><%= map.latitude %></td>
        <td><%= link_to 'Show', map %></td>
        <td><%= link_to 'Edit', edit_map_path(map) %></td>
        <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path %>

<div style='width: 800px;'>
  <div id="geolocation" style='width: 800px; height: 400px;'></div>
</div>

<script type='text/javascript'>
var handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'geolocation'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  // be aware chrome >= 50 requires https for geolocation to work
  if(navigator.geolocation)
    navigator.geolocation.getCurrentPosition(displayOnMap);
  });

    function displayOnMap(position){
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude,
      "picture": {
          "url": "https://maps.gstatic.com/tactile/mylocation/mylocation-sprite-1x.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "You are here!"
    });
    handler.map.centerOn(marker);

};

</script>
