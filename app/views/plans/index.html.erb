<style>
	table, td, th {
	    border: 1px solid black;
	}

	table {
	    border-collapse: collapse;
	    width: 60%;
	}

	th {
	    height: 50px;
	}
</style>



<h1>Plans#index</h1>
<p>Find me in app/views/plans/index.html.erb</p>

<table>
  <tr>
    <th><%= Date.today.strftime('%a %d/%m') %></th>

    <% 6.times do |z| %>
    	<th><%= (z+1).days.since.strftime('%a %d/%m') %></th>
    <% end %>
  </tr>

  <tr>
    <td><%= button_to "Add recipe", new_user_plan_path, method: :get, params: { :date => Date.today.strftime('%d/%m/%Y')}%></td>

    <% 6.times do |y| %>
    	<td><%= button_to "Add recipe", new_user_plan_path, method: :get, params: {:date => (y+1).days.since.strftime('%d/%m/%Y')} %></td>
    <% end %>
	</tr>

	<tr>
		<% if @day1 %>
			<td>
				<% @day1.each do |a| %>
					<%= a.recipe_id %>  <%= link_to "X", user_plan_path(:user_id => a.user_id, :id => a.id), method: :delete %><br>
				<% end %>
			</td>
		<% end %>

		<% 6.times do |x| %>
			<% if @plans.where(date: (x+1).days.since.strftime('%Y-%m-%d')) %>
				<td>
					<% @plans.where(date: (x+1).days.since.strftime('%Y-%m-%d')).each do |x| %>
						<%= x.recipe_id %>  <%= link_to "X", user_plan_path(:user_id => x.user_id, :id => x.id), method: :delete %><br>
					<% end %>
				</td>
			<% end %>
		<% end %>
	</tr>
</table>


